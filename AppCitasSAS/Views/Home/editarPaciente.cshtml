@model AppCitasSAS.DTO.PacienteDTO

@{
    ViewData["Title"] = "Editar paciente";
}

<div class="container py-4">
    <form class="custom-form cardPrincipal" asp-action="ProcesarFormularioEdicion" asp-controller="Paciente" enctype="multipart/form-data" method="post" asp-route-id="@Model.IdPaciente">
        <h2 class="text-center mb-5">
            <i class="bi bi-person-fill-gear" style="color: #1f3c85">Editar paciente</i>
        </h2>
        <div class="d-flex justify-content-center mt-4 mb-4">
            @if (Model.ProfilePicture != null)
            {
                <img src="data:image/jpeg;base64,@(Model.ProfilePicture != null ? Convert.ToBase64String(Model.ProfilePicture) : "")" class="rounded-circle img-fluid mx-auto" alt="Imagen de paciente" style="max-width: 200px; max-height: 200px;">
            }
            else
            {
                <span class="badge bg-dark">El paciente no tiene foto de perfil</span>
            }
        </div>
        <input type="hidden" name="id" value="@Model.IdPaciente" />
        <div class="mb-3">
            <label for="email" class="form-label textoPrincipal">Correo Electrónico</label>
            <input type="email" id="email" name="email" class="form-control" value="@Model.EmailPaciente" readonly disabled />
        </div>
        <div class="mb-3">
            <label for="nombre" class="form-label textoPrincipal">Nombre</label>
            <input type="text" id="nombre" name="nombre" class="form-control" value="@Model.NombreCompletoPaciente" required />
        </div>
        <div class="mb-3">
            <label for="dni" class="form-label textoPrincipal">DNI</label>
            <input type="text" id="dni" name="dni" class="form-control" value="@Model.DniPaciente" required />
        </div>
        <div class="mb-3">
            <label for="telefono" class="form-label textoPrincipal">Teléfono</label>
            <input type="tel" id="telefono" name="telefono" class="form-control" value="@Model.TlfPaciente" required />
        </div>
        <div class="mb-3">
            <label for="direccion" class="form-label textoPrincipal">Direccion</label>
            <input type="text" id="direccion" name="direccion" class="form-control" value="@Model.DireccionPaciente" required />
        </div>
        @if (User.IsInRole("ROLE_USER"))
        {
            <div class="mb-3">
                <label for="rol" class="form-label textoPrincipal">ROL</label>
                <select id="rol" name="rol" class="form-select" required>
                    <option value="ROLE_USER" selected>Usuario</option>
                </select>
            </div>
        }
        @if (User.IsInRole("ROLE_ADMIN"))
        {
            <div class="mb-3">
                <label for="rol" class="form-label textoPrincipal">ROL</label>
                <select id="rol" name="rol" class="form-select" required>
                    <option value="ROLE_USER" selected>Usuario</option>
                    <option value="ROLE_ADMIN" >Administrador</option>
                </select>
            </div>
        }
        <div class="mb-3">
            <label for="foto" class="form-label textoPrincipal">Foto de Perfil</label>
            <input type="file" id="foto" name="foto" class="form-control" accept="image/*" />
        </div>
        <button type="submit" class="btn btn-primary mt-5">
            <i class="bi bi-person-fill-gear fs-5"> Guardar cambios</i>
        </button>

        @if (User.IsInRole("ROLE_ADMIN"))
        {
            <a href="/privada/Administracion" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        }
        else if (User.IsInRole("ROLE_USER"))
        {
            <a href="/privada/Pacientes" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        }

    </form>
</div>