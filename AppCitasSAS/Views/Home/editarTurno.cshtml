@model AppCitasSAS.DTO.ConsultaTurnoDTO

@{
    ViewData["Title"] = "Editar turno";
}

<div class="container py-4">
    <form class="custom-form cardPrincipal" asp-action="ProcesarFormularioEdicionTurno" asp-controller="Turnos" enctype="multipart/form-data" method="post" asp-route-id="@Model.IdConsultaTurno">
        <h2 class="text-center mb-5">
            <i class="bi bi-person-fill-gear" style="color: #1f3c85">Editar turno</i>
        </h2>
        <input type="hidden" name="id" value="@Model.IdConsultaTurno" />
        <div class="mb-3">
            <label for="numConsulta" class="form-label textoPrincipal">Numero Consulta</label>
            <input type="number" id="numConsulta" name="numConsulta" class="form-control" value="@Model.NumConsulta" required />
        </div>
        <div class="mb-3">
            <label for="tramoInicio" class="form-label textoPrincipal">Hora Inicio</label>
            <input type="time" id="tramoInicio" name="tramoInicio" class="form-control" value="@Model.TramoHoraTurnoInicio" required />
        </div>
        <div class="mb-3">
            <label for="tramoFin" class="form-label textoPrincipal">Hora Fin</label>
            <input type="time" id="tramoFin" name="tramoFin" class="form-control" value="@Model.TramoHoraTurnoFin" required />
        </div>
        <button type="submit" class="btn btn-primary mt-5">
            <i class="bi bi-person-fill-gear fs-5"> Guardar cambios</i>
        </button>
    </form>
</div>
